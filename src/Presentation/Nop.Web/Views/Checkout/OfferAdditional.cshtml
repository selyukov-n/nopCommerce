@using Nop.Core.Domain.Orders
@model List<ShoppingCartItem>
  
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Checkout").Text);

    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-offer-additional-page");
}

<div class="page checkout-page offer-additional-page">
    @await Component.InvokeAsync("CheckoutProgress", new { step = CheckoutProgressStep.AdditionalProducts })
    <div class="page-title">
        <h1>@T("Checkout.OfferAdditional")</h1>
    </div>

    <div class="page-body checkout-data">
        <form asp-route="CheckoutOfferAdditional" method="post">

            @* TODO *@
            <h2>Get Special Offers!</h2>
            <p>Protect your car</p>

            <div class="buttons">
                <button type="submit" name="nextstep" class="button-1 offer-additional-next-step-button">@T("Checkout.NextButton")</button>
            </div>
        </form>

        <script asp-location="Footer">
                console.log(
                    @Html.Raw(Json.Serialize(Model))
                );
        </script>

        <div class="section order-summary">
            <div class="title">
                <strong>@T("Checkout.OrderSummary")</strong>
            </div>
            @await Component.InvokeAsync("OrderSummary")
        </div>
    </div>
</div>
